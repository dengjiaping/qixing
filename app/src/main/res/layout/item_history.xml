<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white_F" >
    <View
        android:visibility="invisible"
        style="@style/line_gray.0" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/item_history_ll_video"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_history_img_icon"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_loading"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_history_tv_name"
                    style="@style/text_black.13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队"/>
                <TextView
                    android:id="@+id/item_history_tv_context"
                    style="@style/text_gray.13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:src="@drawable/icon_seenum"
                            />
                        <TextView
                            android:id="@+id/item_history_tv_num"
                            style="@style/text_gray.13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="22万"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/item_history_img_share"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:visibility="visible"
                            android:src="@drawable/icon_playvideo_share"
                            />
                        <TextView
                            android:id="@+id/item_history_tv_share"
                            style="@style/text_gray.13"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="222222"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/item_history_rl_live"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x190"
            android:visibility="gone"
            >
            <!--@dimen/x220-->
            <ImageView
                android:id="@+id/item_history_img_icon2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/x190"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_icon"
                />
            <!--android:src="@drawable/test_img_1"-->
            <Button
                android:id="@+id/item_history_btn_attention"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:background="@drawable/btn_default_selector"
                style="@style/text_white.13"
                android:text="取消关注" />
            <Button
                android:id="@+id/item_history_btn_state"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:background="@drawable/btn_default_selector"
                style="@style/text_white.13"
                android:text="直播中" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparentbg"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:orientation="horizontal">
                <com.qixing.view.CircleImageView
                    android:id="@+id/item_history_img_head"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:border_color="@color/transparent"
                    app:border_width="0dp"
                    android:src="@drawable/img_head_default"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/item_history_tv_title"
                        style="@style/text_white.15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="2016全球创业峰会"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/item_history_tv_name2"
                            style="@style/text_white.11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="德德德"/>
                        <TextView
                            android:id="@+id/item_history_tv_times"
                            style="@style/text_white.11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="今天 13.55"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>