<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white" >

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/icon_back_selector"
        app:bgatitlebar_titleText="添加银行卡"
        app:bgatitlebar_rightText="确定"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户人"/>
            <EditText
                android:id="@+id/my_bank_add_edit_kh_ren"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint=""
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择银行"/>
            <EditText
                android:id="@+id/my_bank_add_edit_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint="选择银行"
                android:focusable="false"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户所在地"/>
            <EditText
                android:id="@+id/my_bank_add_edit_address"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint=""
                android:focusable="false"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行"/>
            <EditText
                android:id="@+id/my_bank_add_edit_carddeposit"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint=""
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡号"/>
            <EditText
                android:id="@+id/my_bank_add_edit_bankcode"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint=""
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认卡号"/>
            <EditText
                android:id="@+id/my_bank_add_edit_bankcode2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint=""
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户手机号"/>
            <EditText
                android:id="@+id/my_bank_add_edit_bank_tel"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint=""
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>

    </LinearLayout>
    <Button
        android:id="@+id/my_bank_add_add"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="@drawable/btn_default_default"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:text="确定"/>
</LinearLayout>	