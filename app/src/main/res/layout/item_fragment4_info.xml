<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white_F" >
    <View
        android:visibility="invisible"
        style="@style/line_gray.0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/item_fragment4_info_ll_type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_fragment4_info_img_icon"
                android:layout_width="@dimen/item_recommended_info_img_width"
                android:layout_height="@dimen/item_recommended_info_img_height"
                android:scaleType="centerCrop"
                android:src="@drawable/test_img_black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_fragment4_info_tv_name"
                    style="@style/text_black.13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_fragment4_info_tv_times"
                        style="@style/text_gray.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="2016-12-02"/>
                    <TextView
                        android:id="@+id/item_fragment4_info_tv_num"
                        style="@style/text_gray.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="1233"/>
                    <ImageView
                        android:id="@+id/item_fragment4_info_img_share"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_comment"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/item_fragment4_info_img_new"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:src="@drawable/icon_info_tag_new"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_fragment4_info_ll_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/item_fragment4_info_tv_name2"
                    style="@style/text_black.13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队史蒂夫法国队"/>
                <ImageView
                    android:id="@+id/item_fragment4_info_img_new2"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_info_tag_new"
                    android:visibility="gone"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_fragment4_info_img_icon1"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_img_black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_fragment4_info_img_icon2"
                        android:layout_width="match_parent"
                        android:layout_height="93dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_img_black"
                        />
                    <ImageView
                        android:id="@+id/item_fragment4_info_img_icon3"
                        android:layout_width="match_parent"
                        android:layout_height="93dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_img_black"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_fragment4_info_tv_times2"
                    style="@style/text_gray.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="2016-12-02"/>
                <TextView
                    android:id="@+id/item_fragment4_info_tv_imgnum2"
                    style="@style/text_gray.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="3"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_info_img"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/item_fragment4_info_tv_num2"
                    style="@style/text_gray.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="1233"/>
                <ImageView
                    android:id="@+id/item_fragment4_info_img_share2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_comment"
                    android:visibility="gone"
                    />
            </LinearLayout>
         </LinearLayout>
    </LinearLayout>
</LinearLayout>