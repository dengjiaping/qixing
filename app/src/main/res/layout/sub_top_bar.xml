<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/color_titlebar_default"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="3dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/sun_top_layout_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sun_top_tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:text="七星资讯"
                android:textColor="@color/white_F"
                android:textSize="12sp"
               />
            <View
                android:id="@+id/sun_top_view_info"
                style="@style/line_white_v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sun_top_layout_dried"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sun_top_tv_dried"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:text="七星干货"
                android:textColor="@color/white_F"
                android:textSize="12sp"
             />
            <View
                android:id="@+id/sun_top_view_dried"
                android:visibility="invisible"
                style="@style/line_white_v" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>