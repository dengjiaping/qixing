<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_regist_bg_white" >

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/icon_back_selector"
        app:bgatitlebar_titleText="修改支付密码"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="visible"
                android:text="用户名："/>

            <EditText
                android:id="@+id/modify_pay_pwd_edit_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请输入用户名"
                android:singleLine="true"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:textSize="16dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="gone"
                android:text=""/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_login_phone"
                android:visibility="gone"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/modify_pay_pwd_edit_oldpwd"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请输入原密码"
                android:maxLength="6"
                android:singleLine="true"
                android:inputType="numberPassword"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="gone"
                android:text=""/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_regist_code"
                android:visibility="gone"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/modify_pay_pwd_edit_newpwd"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="请输入新密码"
                android:maxLength="6"
                android:inputType="numberPassword"
                android:singleLine="true"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:paddingLeft="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="gone"
                android:text=""/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_login_pwd"
                android:visibility="gone"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/modify_pay_pwd_edit_newpwd2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请确认新密码"
                android:maxLength="6"
                android:inputType="numberPassword"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            style="@style/line_gray.0"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:gravity="center">
            <TextView
                android:id="@+id/login_tv_regist"
                style="@style/text_red.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="left"
                android:text="立即注册"/>
            <TextView
                android:id="@+id/modify_pay_pwd_tv_forpwd"
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_text_color_select"
                android:layout_weight="1"
                android:gravity="right"
                android:text="忘记密码？"/>
        </LinearLayout>

        <Button
            android:id="@+id/modify_pay_pwd_btn_confrim"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_red_selector"
            android:layout_marginTop="25dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="确  定"/>


    </LinearLayout>
</LinearLayout>	