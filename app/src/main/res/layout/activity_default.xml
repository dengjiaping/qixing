<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/icon_back_selector"
        app:bgatitlebar_titleText="@string/select_photo"
        app:bgatitlebar_rightText="完成(1/3)"
        />

    <include
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:visibility="gone"
        layout="@layout/cmp_customer_actionbar" />

    <FrameLayout
        android:id="@+id/image_grid"
        android:background="#181819"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
