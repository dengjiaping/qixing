<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jf_exchange"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入兑换的积分数"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/dialog_jf_exchange_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="比例"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_dialog_jf_exchange_input"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="number"
        android:background="@drawable/dialog_jf_exchange_shape"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="@color/darkgray"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_dialog_jf_exchange_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_jf_exchange_shape"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="16sp"/>
        <!--<View-->
            <!--android:layout_width="0.5dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/darkgray"/>-->
        <Button
            android:id="@+id/btn_dialog_jf_exchange_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_jf_exchange_shape"
            android:text="确定"
            android:textColor="@color/red"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>