<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white_F" >
    <View
        android:visibility="invisible"
        style="@style/line_gray.0" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_F"
        android:gravity="center"
        android:paddingTop="1dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_recomm_dried"
            />
        <LinearLayout
            android:id="@+id/item_fragment1_dried_ll_driedmore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/text_red.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="七星干货"/>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">
                <TextView
                    style="@style/text_gray.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_more"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:id="@+id/item_fragment1_dried_ll_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1.0"
            >
            <ImageView
                android:id="@+id/item_fragment1_dried_img_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_loading"
                />
            <TextView
                android:id="@+id/item_fragment1_dried_tv_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="最新"
                android:textColor="@color/color_bottom_select"
                android:textSize="13dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_fragment1_dried_ll_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1.0"
            >
            <ImageView
                android:id="@+id/item_fragment1_dried_img_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_loading"
                />
            <TextView
                android:id="@+id/item_fragment1_dried_tv_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="案例分享"
                android:textColor="@color/black"
                android:textSize="13dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_fragment1_dried_ll_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1.0"
            >
            <ImageView
                android:id="@+id/item_fragment1_dried_img_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_loading"
                />
            <TextView
                android:id="@+id/item_fragment1_dried_tv_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="管理类"
                android:textColor="#000000"
                android:textSize="13dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_fragment1_dried_ll_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1.0"
            >
            <ImageView
                android:id="@+id/item_fragment1_dried_img_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_loading"
                />
            <TextView
                android:id="@+id/item_fragment1_dried_tv_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="营销类"
                android:textColor="#000000"
                android:textSize="13dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_fragment1_dried_ll_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1.0"
            >
            <ImageView
                android:id="@+id/item_fragment1_dried_img_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_loading"
                />
            <TextView
                android:id="@+id/item_fragment1_dried_tv_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="团队打造"
                android:textColor="#000000"
                android:textSize="13dp"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/scrollbar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/linearLayout"
        android:scaleType="matrix"
        android:src="@drawable/img_line_red"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_fragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollbar">
    </android.support.v4.view.ViewPager>
    <com.qixing.view.MyListView
        android:id="@+id/item_fragment1_dried_lv_dried"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/gray_e2"
        android:dividerHeight="0.5dp"
        android:visibility="gone">
    </com.qixing.view.MyListView>
</LinearLayout>