<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white_F" >

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/icon_back_selector"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            style="@style/text_gray.14"
            android:visibility="visible"
            android:text="为了您的账号安全，请绑定手机哦"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <EditText
                android:id="@+id/complement_userinfo_edit_phone"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请输入手机号"
                android:singleLine="true"
                android:inputType="phone"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/complement_userinfo_edit_code"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="请输入验证码"
                android:inputType="numberSigned"
                android:singleLine="true"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
            <com.qixing.widget.TimeButton
                android:id="@+id/complement_userinfo_btn_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textSize="14sp"
                android:textColor="@color/gray_66"
                android:gravity="center"
                android:layout_centerVertical="true"
                style="?android:attr/borderlessButtonStyle"
                />
        </LinearLayout>
        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center">
            <EditText
                android:id="@+id/complement_userinfo_edit_pwd"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请设置登录密码"
                android:inputType="textPassword"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center">
            <EditText
                android:id="@+id/complement_userinfo_edit_paypwd"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请设置支付密码"
                android:inputType="textPassword"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="visible"
                android:text="推荐人："/>
            <EditText
                android:id="@+id/complement_userinfo_edit_tjphone"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint=""
                android:inputType="textPassword"
                android:textSize="16dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            android:visibility="gone"
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:gravity="center_vertical" >

            <CheckBox
                android:id="@+id/complement_userinfo_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textSize="14dp"
                android:text="我已阅读并同意"
                />
            <TextView
                android:id="@+id/complement_userinfo_tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金玺币钱包服务协议"
                android:textColor="#0082e6"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/complement_userinfo_btn_confrim"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_default_selector"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="绑定手机号"/>

    </LinearLayout>
</LinearLayout>	