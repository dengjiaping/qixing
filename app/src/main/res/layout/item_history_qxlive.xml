<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white_F" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--@dimen/x220-->
            <ImageView
                android:id="@+id/item_historyqxlive_img_icon"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/x190"
                android:scaleType="fitXY"
                android:src="@drawable/empty_icon"
                />
            <!--android:src="@drawable/test_img_1"-->
            <Button
                android:id="@+id/item_historyqxlive_btn_attention"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:background="@drawable/btn_default_selector"
                style="@style/text_white.13"
                android:text="取消关注" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="5dp"
            android:orientation="horizontal">
            <com.qixing.view.CircleImageView
                android:id="@+id/item_historyqxlive_img_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:border_color="@color/transparent"
                app:border_width="0dp"
                android:src="@drawable/img_head_default"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/item_historyqxlive_tv_name"
                    style="@style/text_white.15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="2016全球创业峰会"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_historyqxlive_tv_num"
                        style="@style/text_white.12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="德德德"/>
                    <TextView
                        android:id="@+id/item_historyqxlive_tv_"
                        style="@style/text_white.12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="今天 13.55"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>	