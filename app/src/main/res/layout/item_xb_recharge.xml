<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_xb_recharge_ll_xb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/xb_recharge_default"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_5_dp"
        android:layout_marginRight="@dimen/dimen_5_dp"
        android:gravity="center">

        <TextView
            android:id="@+id/item_xb_recharge_tv_xb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42金币"
            style="@style/text_black.16"/>

        <TextView
            android:id="@+id/item_xb_recharge_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥6.00"
            style="@style/text_gray.14"
            android:layout_marginTop="@dimen/dimen_5_dp"/>

    </LinearLayout>

</LinearLayout>