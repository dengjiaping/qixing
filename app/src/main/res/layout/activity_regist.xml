<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_regist_bg_white" >

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/icon_back_selector"
        app:bgatitlebar_titleText="注册"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="visible"
                android:text="用户名："/>

            <EditText
                android:id="@+id/regist_edit_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请输入用户名"
                android:singleLine="true"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:textSize="16dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="gone"
                android:text="手机号："/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_login_phone"
                android:visibility="visible"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/regist_edit_phone"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请输入手机号"
                android:singleLine="true"
                android:inputType="phone"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <View
            style="@style/line_gray.0"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:paddingLeft="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="gone"
                android:text="登录密码："/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_login_pwd"
                android:visibility="visible"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/regist_edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="@string/edit_pwd"
                android:inputType="textPassword"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="gone"
                android:text="验证码："/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_regist_code"
                android:visibility="visible"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/regist_edit_code"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:hint="请输入短信验证码"
                android:inputType="numberSigned"
                android:singleLine="true"
                android:textSize="14dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                style="@style/line_gray_v.0"/>
            <com.qixing.widget.TimeButton
                android:id="@+id/regist_btn_time"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="发送验证码"
                android:textSize="14sp"
                android:textColor="@color/color_titlebar_red"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_code_selector"
                style="?android:attr/borderlessButtonStyle"
                />
        </LinearLayout>
        <View
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="visible"
                android:text="确认密码："/>
            <EditText
                android:id="@+id/regist_edit_pwd2"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="@string/edit_confirm_pwd"
                android:inputType="textPassword"
                android:textSize="16dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            android:visibility="gone"
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="visible"
                android:text="支付密码："/>
            <EditText
                android:id="@+id/regist_edit_paypwd"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint="请设置六位支付密码"
                android:maxLength="6"
                android:inputType="numberDecimal|textPassword"
                android:textSize="16dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            android:visibility="gone"
            style="@style/line_gray.0"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/text_black.16"
                android:visibility="visible"
                android:text="推荐人："/>
            <EditText
                android:id="@+id/regist_edit_tjphone"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:gravity="left|center_vertical"
                android:text=""
                android:hint=""
                android:inputType="textPassword"
                android:textSize="16dp"
                android:textColorHint="@color/gray_69"
                android:textColor="@color/gray_3f"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            android:visibility="gone"
            style="@style/line_gray.0"/>


        <Button
            android:id="@+id/regist_btn_confrim"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_red_selector"
            android:layout_marginTop="25dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="注  册"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/regist_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:checked="false"
                android:textSize="14dp"
                android:text="我已阅读并同意"
                />
            <TextView
                style="@style/text_black.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定后意味着同意"
                />
            <TextView
                android:id="@+id/regist_tv_xieyi"
                style="@style/text_red.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《注册协议》"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>	