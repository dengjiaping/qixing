<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_cash_recharge_record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="充值目录"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/item_cash_recharge_record_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_cash_recharge_record_name"
        android:layout_marginRight="10dp"
        android:text="金额"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/item_cash_recharge_record_paymethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_cash_recharge_record_name"
        android:layout_below="@id/item_cash_recharge_record_name"
        android:text="年月日"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/item_cash_recharge_record_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_alignRight="@id/item_cash_recharge_record_money"
        android:layout_alignTop="@id/item_cash_recharge_record_paymethod"
        android:layout_below="@id/item_cash_recharge_record_money"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        android:layout_below="@id/item_cash_recharge_record_paymethod"
        android:layout_marginTop="10dp"/>

</RelativeLayout>