<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white_F" >

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_titleText=""
        />

    <View
        style="@style/line_gray.0"
        android:visibility="gone"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:gravity="center">
        
        <ImageView
            android:layout_width="@dimen/dimen_80_dp"
            android:layout_height="@dimen/dimen_80_dp"
            android:src="@drawable/icon_login_logo"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/login_ll_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center_vertical">
                <TextView
                    style="@style/text_black.19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="账 号："
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_login_phone"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/login_edit_name"
                        android:layout_width="280dp"
                        android:layout_height="40dp"
                        android:background="@color/transparent"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:hint="@string/edit_phone"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_69"
                        android:textColor="@color/gray_3f"
                        android:paddingLeft="10dp" />

                </RelativeLayout>

            </LinearLayout>
            <View
                style="@style/line_gray.0" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:gravity="center">
                <TextView
                    style="@style/text_black.19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    android:text="密 码："
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_login_pwd"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/login_edit_pwd"
                        android:layout_width="280dp"
                        android:layout_height="40dp"
                        android:background="@color/transparent"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:hint="@string/edit_pwd"
                        android:singleLine="true"
                        android:textSize="16dp"
                        android:inputType="textPassword"
                        android:textColorHint="@color/gray_69"
                        android:textColor="@color/gray_3f"
                        android:paddingLeft="10dp" />

                </RelativeLayout>
            </LinearLayout>
            <View
                style="@style/line_gray.0" />
            <Button
                android:id="@+id/login_btn_login"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_red_selector"
                android:layout_marginTop="30dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="登  录"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/login_tv_regist"
                    style="@style/text_red.15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="立即注册"/>
                <TextView
                    android:id="@+id/login_tv_forpwd"
                    style="@style/text_gray.15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="忘记密码？"/>
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_below="@+id/login_ll_login">

            <TextView
                android:id="@+id/login_tv_info"
                style="@style/text_gray.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="忘记密dadadadasdasdada？"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:gravity="center_vertical">
                <View
                    style="@style/line_gray.0"
                    android:layout_weight="1"/>
                <TextView
                    style="@style/text_gray.15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="其他帐号登录"/>
                <View
                    style="@style/line_gray.0"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="@dimen/dimen_40_dp"
                android:layout_marginRight="@dimen/dimen_40_dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/login_ll_wxlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_login_wx"
                        />
                    <TextView
                        style="@style/text_black.12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="微信"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/login_ll_zfblogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:visibility="visible"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_login_zfb"
                        />
                    <TextView
                        style="@style/text_black.12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="支付宝"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/login_ll_qqlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:visibility="visible"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_login_qq"
                        />
                    <TextView
                        style="@style/text_black.12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=" QQ "/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>