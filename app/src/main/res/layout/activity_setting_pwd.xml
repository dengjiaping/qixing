<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_mine_bg">

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/icon_back_selector"
        app:bgatitlebar_rightText="确定"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            style="@style/text_black.14"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:text="手机"/>
        <EditText
            android:id="@+id/setting_pwd_edit_phone"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="14dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:hint="请输入手机号"
            android:singleLine="true"
            android:inputType="numberSigned"
            android:textColorHint="@color/gray_69"
            android:textColor="@color/gray_3f"
            android:paddingLeft="10dp" />
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/line_gray_v.0"/>
        <com.qixing.widget.TimeButton
            android:id="@+id/setting_pwd_btn_time"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="发送验证码"
            android:textSize="14sp"
            android:textColor="@color/color_titlebar_red"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@color/white"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>
    <View
        style="@style/line_gray.0"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/text_black.14"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:text="验证码"/>
        <EditText
            android:id="@+id/setting_pwd_edit_code"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="14dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:hint="请输入验证码"
            android:singleLine="true"
            android:inputType="numberSigned"
            android:textColorHint="@color/gray_69"
            android:textColor="@color/gray_3f"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <View
        style="@style/line_gray.0"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/text_black.14"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:text="密码"/>
        <EditText
            android:id="@+id/setting_pwd_edit_newpwd"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="14dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:inputType="textPassword"
            android:hint="设置新密码"
            android:textColorHint="@color/gray_69"
            android:textColor="@color/gray_3f"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <View
        style="@style/line_gray.0"/>


</LinearLayout>