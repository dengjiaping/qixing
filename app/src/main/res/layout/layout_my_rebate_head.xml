<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    >
    <!--android:background="@color/white"-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/color_rebate_red"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_launcher"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/layout_my_rebate_head_tv_rebate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_F"
                            android:textSize="14dp"
                            android:text="分销返利"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        >
                        <TextView
                            android:id="@+id/layout_my_rebate_head_tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_F"
                            android:textSize="40dp"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_F"
                            android:textSize="15dp"
                            android:text="元"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_F"
                            android:textSize="15dp"
                            android:text="有钱大家一起赚，让我带你一起飞"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    >
                    <!--com.jinxibi.mall.view.CircleImageView-->
                    <!--app:border_color="@color/transparent"
                        app:border_width="0dp"-->
                    <com.qixing.view.CircleImageView
                        android:id="@+id/layout_my_rebate_head_img_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:border_color="@color/transparent"
                        app:border_width="0dp"
                        android:src="@drawable/img_head_default"
                        />
                    <TextView
                        android:id="@+id/layout_my_rebate_head_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white_F"
                        android:textSize="15dp"
                        android:text="Sunshint_girl"/>
                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/line_gray.0"/>
            <LinearLayout
                android:id="@+id/layout_my_rebate_head_ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/layout_my_rebate_head_ll_rebateID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/layout_my_rebate_head_tv_rebateID"
                        style="@style/text_white.15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        style="@style/text_white.15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="我的推广ID"/>
                </LinearLayout>
                <View
                    style="@style/line_gray_v.0"/>
                <LinearLayout
                    android:id="@+id/layout_my_rebate_head_ll_invite"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/layout_my_rebate_head_tv_invite"
                        style="@style/text_white.15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        style="@style/text_white.15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="累积邀请"/>
                </LinearLayout>
                <View
                    style="@style/line_gray_v.0"/>
                <LinearLayout
                    android:id="@+id/layout_my_rebate_head_ll_sum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/layout_my_rebate_head_tv_sum"
                        style="@style/text_white.15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        style="@style/text_white.15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="累积返利"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>