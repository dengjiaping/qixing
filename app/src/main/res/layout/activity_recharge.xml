<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_regist_bg_white" >

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/icon_back_selector"
        app:bgatitlebar_titleText="报名"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/text_red.14"
                    android:visibility="gone"
                    android:text="*"/>
                <TextView
                    style="@style/text_black.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible"
                    android:text="充值金额"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_login_pwd"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/recharge_edit_amount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:hint="金额"
                    android:inputType="numberDecimal"
                    android:textSize="13dp"
                    android:textColorHint="@color/gray_69"
                    android:textColor="@color/gray_3f"
                    android:paddingLeft="10dp" />
            </LinearLayout>
            <View
                style="@style/line_gray.0"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:visibility="gone"
                    style="@style/line_gray.0"/>
                <LinearLayout
                    android:id="@+id/recharge_ll_paymethod"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:visibility="gone"
                        android:src="@drawable/icon_setting"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        style="@style/text_red.13"
                        android:visibility="gone"
                        android:text="*"/>
                    <TextView
                        android:id="@+id/recharge_tv_bankname"
                        style="@style/text_black.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="选择支付方式"/>
                    <TextView
                        style="@style/text_black.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""/>
                    <ImageView
                        android:id="@+id/recharge_img_right"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_piont_right1"
                        />
                    <ImageView
                        android:id="@+id/recharge_img_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:src="@drawable/icon_piont_bottom"
                        />
                </LinearLayout>

                <View
                    style="@style/line_gray.0"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recharge_ll_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/recharge_ll_zhifubao"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:visibility="visible"
                            android:src="@drawable/icon_zhifubao"
                            />
                        <TextView
                            style="@style/text_black.14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="支付宝支付"/>
                        <ImageView
                            android:id="@+id/recharge_img_zhifubao"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:visibility="invisible"
                            android:src="@drawable/icon_select"
                            />
                    </LinearLayout>

                    <View
                        style="@style/line_gray.0"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/recharge_ll_weixin"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:visibility="visible"
                            android:src="@drawable/icon_weixin"
                            />
                        <TextView
                            style="@style/text_black.14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="微信支付"/>
                        <ImageView
                            android:id="@+id/recharge_img_weixin"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:visibility="invisible"
                            android:src="@drawable/icon_select"
                            />
                    </LinearLayout>
                    <View
                        style="@style/line_gray.0"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/recharge_btn_confrim"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_red_selector"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="30dp"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="确认支付"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>