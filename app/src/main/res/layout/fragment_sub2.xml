<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment4_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="both"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/fragment4_bgabanner4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x180"
                android:clipChildren="false"
                app:banner_pointAutoPlayAble="true"
                app:banner_pointTopBottomMargin="4dp"
                />
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:background="#FFFFFF"
                >
                <LinearLayout
                    android:id="@+id/item_fragment1_dried_ll_5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.0"
                    >
                    <ImageView
                        android:id="@+id/item_fragment1_dried_img_5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_loading"
                        />
                    <TextView
                        android:id="@+id/item_fragment1_dried_tv_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="最新"
                        android:textColor="@color/color_bottom_select"
                        android:textSize="13dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_fragment1_dried_ll_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.0"
                    >
                    <ImageView
                        android:id="@+id/item_fragment1_dried_img_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_loading"
                        />
                    <TextView
                        android:id="@+id/item_fragment1_dried_tv_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="案例分享"
                        android:textColor="#000000"
                        android:textSize="13dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_fragment1_dried_ll_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.0"
                    >
                    <ImageView
                        android:id="@+id/item_fragment1_dried_img_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_loading"
                        />
                    <TextView
                        android:id="@+id/item_fragment1_dried_tv_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="管理类"
                        android:textColor="#000000"
                        android:textSize="13dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_fragment1_dried_ll_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.0"
                    >
                    <ImageView
                        android:id="@+id/item_fragment1_dried_img_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_loading"
                        />
                    <TextView
                        android:id="@+id/item_fragment1_dried_tv_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="营销类"
                        android:textColor="#000000"
                        android:textSize="13dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_fragment1_dried_ll_4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.0"
                    >
                    <ImageView
                        android:id="@+id/item_fragment1_dried_img_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_loading"
                        />
                    <TextView
                        android:id="@+id/item_fragment1_dried_tv_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="团队打造"
                        android:textColor="#000000"
                        android:textSize="13dp"/>
                </LinearLayout>

            </LinearLayout>
            <com.qixing.view.MyListView
                android:id="@+id/item_fragment4_info_lv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@color/gray_e2"
                android:dividerHeight="0.5dp"
                android:visibility="visible">
            </com.qixing.view.MyListView>
        </LinearLayout>

    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>


</LinearLayout>