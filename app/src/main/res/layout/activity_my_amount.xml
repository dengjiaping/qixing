<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_mine_bg">

    <com.qixing.view.titlebar.BGATitlebar
        android:id="@+id/mTitleBar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/icon_back_selector"
        />
    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@drawable/btn_red_amount_edge_default"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/my_amount_ll_sell"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/btn_red_amount_default"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal">
            <TextView
                style="@style/text_white.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额"/>
            <TextView
                android:id="@+id/my_amount_tv_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/text_white.16"
                android:text="¥0.00"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:padding="@dimen/dimen_5_dp">

        <Button
            android:id="@+id/my_amount_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_gravity="center|right"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_all_selector"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="充值"/>
        <View
            style="@style/line_gray_v.0"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:layout_marginRight="@dimen/dimen_5_dp"/>
        <Button
            android:id="@+id/my_amount_btn_cash"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_gravity="center|right"
            android:background="@drawable/btn_all_selector"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="提现"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/my_amount_btn_jf_record"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_gravity="center|right"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_all_selector"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="积分"/>
        <View
            style="@style/line_gray_v.0"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:layout_marginRight="@dimen/dimen_5_dp"/>
        <Button
            android:id="@+id/my_amount_btn_cash_record"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_gravity="center|right"
            android:background="@drawable/btn_all_selector"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="消费记录"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textSize="13dp"
        android:layout_marginTop="15dp"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/my_amount_info"/>

</LinearLayout>