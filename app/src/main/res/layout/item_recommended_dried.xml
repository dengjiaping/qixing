<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white_F" >
    <View
        android:visibility="visible"
        style="@style/line_gray.0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_recommended_dried_img_icon"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_recommended_dried"
            />
        <TextView
            android:id="@+id/item_recommended_dried_tv_name"
            style="@style/text_black.13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="史蒂夫法国"/>
        <ImageView
            android:id="@+id/item_recommended_dried_img_new"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_recommended_dried_tv_times"
            style="@style/text_gray.13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="22万"/>
    </LinearLayout>
</LinearLayout>
