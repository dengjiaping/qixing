<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:background="@color/vip_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择套餐"
            style="@style/text_gray.14"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dimen_20_dp"
        android:paddingBottom="@dimen/dimen_20_dp"
        android:background="@color/white_F">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星币"
            style="@style/text_black.14"/>

        <TextView
            android:id="@+id/my_wallet_chongzhi_tv_xb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5_dp"
            android:text="0"
            android:textSize="@dimen/dimen_40_dp"
            android:textColor="@color/black"
            />

        <com.qixing.view.MyGridView
            android:id="@+id/my_wallet_chongzhi_gv_xb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="10dp"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingRight="@dimen/dimen_15_dp"
            android:numColumns="3"
            >

        </com.qixing.view.MyGridView>

    </LinearLayout>

    <Button
        android:id="@+id/my_wallet_chongzhi_btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:text="立即充值"
        style="@style/text_white.18"
        android:background="@drawable/btn_red_selector"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_marginBottom="@dimen/dimen_30_dp">

        <CheckBox
            android:id="@+id/my_wallet_chongzhi_cb_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:drawableLeft="@drawable/recharge_bg"
            android:drawablePadding="@dimen/dimen_5_dp"
            android:text="我已阅读并同意"
            style="@style/text_gray.14"
            />

        <TextView
            android:id="@+id/my_wallet_chongzhi_tv_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户充值协议》"
            style="@style/text_red.14"/>

    </LinearLayout>

</LinearLayout>